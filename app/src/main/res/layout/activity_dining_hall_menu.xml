<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/people"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:clickable="false"
            android:ems="10"
            android:foregroundGravity="top|left|center_horizontal"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:singleLine="false"
            android:text="People: 70/200"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorLink="@color/colorPrimary" />

        <EditText
            android:id="@+id/wait"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/people"
            android:layout_toRightOf="@+id/people"
            android:clickable="false"
            android:ems="10"
            android:foregroundGravity="top|right"
            android:inputType="textPersonName"
            android:paddingRight="10dp"
            android:text="Wait Time: 30 mins"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <Button
        android:id="@+id/menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/menu" />

</LinearLayout>
